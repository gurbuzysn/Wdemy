@model TrainerCourseUpdateVM
@{
    ViewData["Title"] = "Kursu Düzenle";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Kursu Düzenle</h5>
        <!-- Floating Labels Form -->
        <form asp-action="Update" class="row g-3" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Kurs Adı">
                    <label asp-for="Name">Kurs Adı</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-floating">
                    <textarea asp-for="Description" class="form-control" placeholder="Kurs Açıklaması" id="floatingTextarea" style="height: 100px;"></textarea>
                    <label asp-for="Description">Kurs Açıklaması</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12" hidden>
                <input asp-for="TrainerId" type="text" class="form-control" placeholder="Kurs Adı">
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Bölümler</h5>
                        <a class="btn btn-primary h-50" onclick="showSection()"><span><i class="bi bi-plus-lg"></i>Bölüm Ekle </span></a>
                    </div>

                    <input id="sectionList" name="sectionList" hidden />
                    <input asp-for="SectionId" id="sectionId" hidden />
                    <input asp-for="CreatedDate" type="datetime" hidden />
                    <div class="row" id="sectionSubmit" hidden>
                        <div class="d-flex gap-3 align-items-center">
                            <div class="col-md-6 ">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="SectionName" placeholder="Your Name">
                                    <label class="fs-9" for="floatingName">Bölüm Adı</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <a class="btn btn-success" onclick="submitSection('@Model.Id')"><i class="bi bi-plus-lg"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        @if (Model.Sections != null)
                        {
                            @for (int i = 0; i < Model.Sections.Count; i++)
                            {
                                <input type="hidden" asp-for="Sections[i].Id" />
                                <input type="hidden" asp-for="Sections[i].SectionName" />
                                <input type="hidden" asp-for="Sections[i].CourseId" />

                                @for (int j = 0; j < Model.Sections[i].Videos.Count; j++)
                                {
                                    <input type="hidden" asp-for="Sections[i].Videos[j].Id" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].Name" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].DocumentUri" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].CreatedBy" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].CreatedDate" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].ModifiedBy" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].ModifiedDate" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].VideoUri" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].Duration" />
                                    <input type="hidden" asp-for="Sections[i].Videos[j].SectionId" />
                                }
                            }

                            @for (int z = 0; z < Model.Sections.Count; z++)
                            {
                               
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="flush-headingOne">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" onclick="sendId('@Model.Sections[z].Id')" data-bs-target="#flush-collapse-@Model.Sections[z].Id" aria-expanded="false" aria-controls="flush-collapseOne">
                                            @Model.Sections[z].SectionName
                                        </button>
                                    </h2>
                                    <div id="flush-collapse-@Model.Sections[z].Id" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                        <div class="accordion-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input asp-for="Sections[z].LessonName" type="text" class="form-control" placeholder="Ders Adı">
                                                        <label asp-for="Sections[z].LessonName">Ders Adı</label>
                                                        <span asp-validation-for="Sections[z].LessonName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="row">
                                                        <label asp-for="Sections[z].VideoData" class="col-sm-2 col-form-label">Video Yükle</label>
                                                        <div class="col">
                                                            <input asp-for="Sections[z].VideoData" class="form-control" type="file">
                                                        </div>
                                                    </div>
                                                    <span asp-validation-for="Sections[z].VideoData" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @foreach (var video in Model.Sections[z].Videos)
                                    {

                                        <div id="flush-collapse-@Model.Sections[z].Id" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                            <div class="accordion-body"><a asp-controller="Video" asp-action="Details" asp-route-id="@video.Id">@video.Name</a></div>
                                        </div>
                                    }
                                </div>
                            }
                        }
                        
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="reset" class="btn btn-secondary">Listeye Dön</button>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form><!-- End floating Labels Form -->
    </div>
</div>
@section Scripts {
    <script src="~/js/add-section.js"></script>
}